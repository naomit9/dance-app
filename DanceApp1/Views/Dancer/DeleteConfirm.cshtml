@model DanceApp1.Models.DancerDto

@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow">

    <h2>
        Are you sure you want to delete @Model.firstName @Model.lastName?
    </h2>
    <p>
        This action cannot be undone.
    </p>
    <nav>
        <form method="POST" action="/Dancer/Delete/@Model.dancerId" style="display: inline;">
            <button class="btn btn-outline-danger">Confirm Delete</button>
        </form>

        <form method="POST" action="/Dancer/Details/@Model.dancerId" style="display: inline;">
            <button class="btn btn-outline-outline">Cancel</button>
        </form>  
    </nav>
</div>