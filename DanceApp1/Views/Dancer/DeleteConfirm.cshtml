@model DanceApp1.Models.DancerDto

@{
    ViewBag.Title = "DeleteConfirm";
}


<div id="containershow">

    <h2>
        Are you sure you want to delete @Model.firstName @Model.lastName?
    </h2>
    <p>
        This action cannot be undone.
    </p>
    <nav>
        <form method="POST" action="/Dancer/Delete/@Model.dancerId">
            <button class="delbtn" style="color:#ab2020;">Confirm Delete</button>
        </form>
    </nav>
    <nav>
        <form method="POST" action="/Dancer/Details/@Model.dancerId">
            <button>Cancel</button>
        </form>  
    </nav>
</div>