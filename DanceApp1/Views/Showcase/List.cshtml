@model IEnumerable<DanceApp1.Models.ShowcaseDto>
@{
    ViewBag.Title = "List";
}

<div class="d-flex min-vh-100">
    <div class="container align-self-center">
        <div class="row justify-content-center">

            <div class="col-12 col-lg-8 col-xl-6 text-center">

                <div class="lc-block mb-2">
                    <img class="img-fluid w-75" alt="Photo by Sebastian Pichler" src="https://images.unsplash.com/photo-1504609813442-a8924e83f76e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
                </div>
                <div class="lc-block mb-4">
                    <div editable="rich">

                        <h2>Here is our list of showcase events on Danceforce Now</h2>

                        <p>From effortlessly managing dancer profiles, including their bios and styles, to organizing dynamic dance groups and coordinating captivating showcases, our comprehensive tools provide you with the control and flexibility you need. </p>
                    </div>
                </div>
                <form method="GET" action="/Showcase/New">
                    <button class="btn btn-success">Add New Showcase</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card-container" style="display: flex; flex-wrap: wrap; justify-content: space-between;">
    @foreach (var show in Model)
    {
        <div class="card" style="width: 18rem; margin-top: 2rem;">
            <div class="card-body">
                <div class="card-text"><strong>@show.showcaseName</strong></div>
                <div class="card-text">@show.Date</div>
                <div class="card-text">@show.showcaseLocation</div>
                <nav style="margin-top: 1rem;">
                    <form method="POST" action="/Showcase/Details/@show.showcaseId">
                        <button class="btn btn-info">View More</button>
                    </form>
                </nav>
            </div>
        </div>
    }
</div>